# Shortcuts to configs
alias vimrc='nvim ~/.vimrc'
alias zshconfig="nvim ~/.zshrc"
alias zshfuncs="nvim ~/.zsh/functions"
alias zshalias="nvim ~/.zsh/aliases"
alias nvimrc="nvim ~/.config/nvim/init.vim"
alias coc="nvim ~/.config/nvim/coc-settings.json"
alias crit="nvim ~/.config/alacritty/alacritty.yml"

# Python related
alias py="python"
alias ipy="ipython3"
alias lsenvs="pyenv virtualenvs"
alias wpy="pyenv which python"
alias frg="pip freeze | rg"
alias ireq="pip install -r requirements.txt"

# Shortcuts to directories
BASEDIR="/media/senyo/senYeezus"
alias cas='cd ${BASEDIR}/Casette'
alias proj='cd ${BASEDIR}/Projects'
alias aero='cd ${BASEDIR}/Aero'
alias dots='cd ~/dotfiles'
alias oss='cd ${BASEDIR}/OSS'
alias mas='cd ~/Masters'

# Aerobotics
alias aerojn='cd ~/Aerobotics/aerowork && jupyter lab'
alias lgn="aeroless auth login --email senyo.simpson@aerobotics.com"

# Postgres
alias pgstart="sudo service postgresql start"
alias pgstop="sudo service postgresql stop"

# General
alias rs="source ~/.zshrc"
alias ignore='gi python,macos,visualstudiocode,vim,c,c++,cmake,pycharm >> .gitignore'
alias o="nvim ."
alias at="alacritty-themes"

# Ripgrep
alias arg="alias | rg"
alias lrg="l | rg"
alias erg="env | rg"
